{
  "manifest_version": 3,
  "name": "Zeroe Pulse AI",
  "description": "AI-powered sales intelligence for HubSpot",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.hubspot.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://app.hubspot.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["web-platform.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_title": "Zeroe Pulse AI"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
